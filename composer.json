{
    "name": "seyvillas/elastic-query-builder",
    "description": "Build and execute an Elasticsearch search query using a fluent PHP API",
    "keywords": [
        "seyvillas",
        "elastics-query-builder",
        "elasticsearch",
        "search"
    ],
    "homepage": "https://github.com/seyvillas/elastic-query-builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Miroslav Koula",
            "email": "mkoula@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Alex Vanderbist",
            "email": "alex.vanderbist@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Ruben Van Assche",
            "email": "ruben@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "elasticsearch/elasticsearch": "^8.2",
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "SeyVillas\\ElasticQueryBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SeyVillas\\ElasticQueryBuilder\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
